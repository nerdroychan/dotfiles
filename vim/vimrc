set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smarttab
set showcmd
set showmode
set showmatch
set hlsearch
set incsearch
set ignorecase
set smartcase
set autoindent
set textwidth=79
set formatoptions=c
set ruler
set number
set mouse=a
filetype plugin indent on
syntax on
set t_Co=256
set cursorline
set autochdir
set noerrorbells
" set visualbell
set background=dark

