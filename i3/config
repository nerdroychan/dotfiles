bindsym XF86MonBrightnessDown exec --no-startup-id "light -U 5"

# set volume
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer set Master 2%+ -M"
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer set Master 2%- -M"
bindsym XF86AudioMute exec --no-startup-id "pamixer -t"
bindsym XF86AudioMicMute exec --no-startup-id "pamixer -m"

# wallpaper (one-shot, no bg process)
